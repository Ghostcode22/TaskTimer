<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAvatar"
        style="@style/Widget.TaskTimer.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Customize Avatar"
        app:navigationIcon="@drawable/ic_arrow_back_24" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        style="@style/Widget.TaskTimer.TabLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/groupHair"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hair / Hat"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTopType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="topType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddTopType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilHairColor"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="hairColor">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddHairColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFacialHairType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="facialHairType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddFacialHairType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFacialHairColor"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="facialHairColor">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddFacialHairColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupClothes"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clothes"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilClotheType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="clotheType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddClotheType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilClotheColor"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="clotheColor">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                    android:id="@+id/ddClotheColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilGraphicType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="graphicType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddGraphicType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAccessoriesType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="accessoriesType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddAccessoriesType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupFace"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEyeType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="eyeType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddEyeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEyebrowType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="eyebrowType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddEyebrowType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMouthType"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="mouthType">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddMouthType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSkinColor"
                    style="@style/Widget.TaskTimer.OutlinedDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="skinColor">
                    <com.erickoeckel.tasktimer.StickyAutoCompleteTextView
                        android:id="@+id/ddSkinColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:importantForAutofill="no" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/btnAvatarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background"
                    android:textColor="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Save"
                    app:backgroundTint="@color/gold"
                    android:textColor="@color/charcoal" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
